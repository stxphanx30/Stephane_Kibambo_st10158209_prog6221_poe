<Window x:Class="poe_.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Scale Recipe" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="ScaleFactorTextBox"  Margin="0,0,0,10"/>
            <Button Content="Scale" Click="ScaleButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
