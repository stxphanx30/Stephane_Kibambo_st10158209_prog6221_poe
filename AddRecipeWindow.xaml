<Window x:Class="poe_.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Recipe" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Add New Recipe" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="RecipeNameTextBox"  Margin="0,0,0,5"/>
            <TextBox Name="IngredientNameTextBox" Margin="0,0,0,5"/>
            <TextBox Name="IngredientQuantityTextBox"  Margin="0,0,0,5"/>
            <TextBox Name="IngredientUnitTextBox" Margin="0,0,0,5"/>
            <TextBox Name="IngredientCaloriesTextBox"  Margin="0,0,0,5"/>
            <TextBox Name="IngredientFoodGroupTextBox" Margin="0,0,0,5"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="0,0,0,5"/>
            <Button Content="Save Recipe" Click="SaveRecipe_Click" Margin="0,0,0,5"/>
            <ListBox Name="IngredientsListBox" Height="100" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
