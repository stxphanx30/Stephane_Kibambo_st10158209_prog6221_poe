<Window x:Class="poe_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe App" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Recipe App" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <Button Content="Add New Recipe" Click="AddNewRecipe_Click" Margin="0,0,0,5"/>
            <Button Content="Display Recipes" Click="DisplayRecipes_Click" Margin="0,0,0,5"/>
            <Button Content="Scale Recipe" Click="ScaleRecipe_Click" Margin="0,0,0,5"/>
            <Button Content="Reset Quantities" Click="ResetQuantities_Click" Margin="0,0,0,5"/>
            <Button Content="Clear Recipe Data" Click="ClearRecipeData_Click" Margin="0,0,0,5"/>
            
            <TextBlock Text="Filter Recipes" FontSize="18" FontWeight="Bold" Margin="0,10,0,5"/>
            
            <TextBox Name="IngredientFilterTextBox"  Margin="0,0,0,5"/>
            <TextBox Name="FoodGroupFilterTextBox"  Margin="0,0,0,5"/>
            <TextBox Name="CalorieFilterTextBox"  Margin="0,0,0,5"/>
            <Button Content="Filter Recipes" Click="FilterRecipes_Click" Margin="0,0,0,5"/>
            
            <ListBox Name="RecipesListBox" Height="200" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>